<Window x:Class="Binary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Binary"
        mc:Ignorable="d"
        Title="Binary" Height="450" Width="800">
    <Grid>
        <ScrollViewer Margin="100,0" VerticalAlignment="Center" HorizontalAlignment="Center" CanContentScroll="True">
            <TextBlock TextWrapping="Wrap" x:Name="lbl_result" FontWeight="Bold" FontSize="24" />
        </ScrollViewer>
        <TextBox x:Name="TB_lenght" MaxLength="5" Width="150" Height="30" VerticalContentAlignment="Center" HorizontalAlignment="Right" Margin="30,00" />
        <Button Content="Generator" Width="150" Height="30" x:Name="gen_btn" Click="gen_btn_Click" VerticalAlignment="Bottom" Margin="0,100" />
    </Grid>
</Window>
